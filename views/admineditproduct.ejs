<%- include("adminheader") %>
<section id="editproduct">
<div class="container">
    <div class="text-center mt-4"> 
        
        <h1>Edit a Product</h1>
    </div>
    <div style="margin: 25px auto; width: 40%;">
    
        <form action="/seller/product/<%= product._id %>/edit?_method=PUT" method="POST">
        <div class="form-group">
            <input type="text" value="<%= product.name %>" class="form-control" name="name">
        </div>
        <div class="form-group">
            <input type="text" id="" value="<%= product.image %>" class="form-control" name="image">
        </div>
        <div class="form-group">
            <input type="number" min="1" step="1" name="price" id="" class="form-control" value="<%= product.price %>">
        </div>
        <div class="form-group">
            <textarea name="description" class="form-control"><%= product.description %></textarea>
        </div>
        <div class="form-group">
            <button class="form-control btn btn-info">Update Product</button>
        </div>
    </div>
    
</div>
</form>
</section>
<%- include("adminfooter") %>