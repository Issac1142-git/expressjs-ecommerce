<%- include("adminheader") -%>

<section id="myproduct">
    <div class="container text-center">
        <div class="row">
            <% products.posts.forEach(function(post){ %>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card mb-4">
                    <img src="<%= post.image %>" alt="" class="card-img-top">
                    <div class="card-body">
                        <h3 class="card-title"><%= post.name %></h3>
                        <h6 class="card-subtitle">RS <%= post.price %></h6>
                        <p class="card-text"><%= post.description.substring(1, 50) %> <a href="/seller/product/<%= post._id %>"> Read More</a></p>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</section>

<%- include("adminfooter") -%>